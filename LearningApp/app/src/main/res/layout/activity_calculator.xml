<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.learningapp.calculator.viewModel.CalculatorViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".calculator.view.CalculatorActivity">
        <TextView
            android:text="@{viewModel.input}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_input"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="end"
            android:background="@drawable/background_caculator_border"
            android:textColor="@color/lavender"/>
        <TextView
            android:text="@{viewModel.output}"
            android:layout_margin="5dp"
            android:background="@drawable/background_caculator_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_output"
            android:textStyle="bold"
            android:textSize="60sp"
            android:padding="10dp"
            android:gravity="end"
            android:textColor="@color/lavender"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="OFF"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_off"
                    android:onClick="@{()->viewModel.offButtonClick()}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="C"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_clear"
                    android:onClick="@{()->viewModel.clearButtonClick()}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="%"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_percent"
                    android:onClick="@{()->viewModel.buttonPERCENTClick()}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="/"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_divide"
                    android:onClick="@{()->viewModel.buttonDIVISIONClick()}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="7"
                    android:onClick="@{()->viewModel.numberButtonClick(7)}"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_seven"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="8"
                    android:onClick="@{()->viewModel.numberButtonClick(8)}"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_eight"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="9"
                    android:onClick="@{()->viewModel.numberButtonClick(9)}"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_night"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="X"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_multiply"
                    android:onClick="@{()->viewModel.buttonMULTIPLYClick()}"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="4"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:onClick="@{()->viewModel.numberButtonClick(4)}"
                    android:id="@+id/btn_four"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{()->viewModel.numberButtonClick(5)}"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="5"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_five"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{()->viewModel.numberButtonClick(6)}"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_six"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="-"
                    android:textSize="25sp"
                    android:onClick="@{()->viewModel.buttonSUBTRACTClick()}"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_subtract"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:onClick="@{()->viewModel.numberButtonClick(1)}"
                    android:textStyle="bold"
                    android:id="@+id/btn_one"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="2"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:onClick="@{()->viewModel.numberButtonClick(2)}"
                    android:id="@+id/btn_two"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="3"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:onClick="@{()->viewModel.numberButtonClick(3)}"
                    android:id="@+id/btn_three"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="+"
                    android:textSize="25sp"
                    android:onClick="@{()->viewModel.buttonAddClick()}"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_add"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="0"
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:onClick="@{()->viewModel.numberButtonClick(0)}"
                    android:id="@+id/btn_zero"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_caculator_border"
                    android:layout_margin="3dp"
                    android:text="."
                    android:textSize="25sp"
                    android:textColor="@color/lavender"
                    android:textStyle="bold"
                    android:id="@+id/btn_point"
                    android:onClick="@{()->viewModel.dotButtonClick()}"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/background_caculator"
                    android:layout_margin="3dp"
                    android:text="="
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_equal"
                    android:onClick="@{()->viewModel.equalButtonClick()}"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>